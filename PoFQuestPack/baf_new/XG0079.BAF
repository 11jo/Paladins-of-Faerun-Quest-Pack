		CreateCreature("SPIDSW01",[543.1505],14) // (Araignée-sabre)
		CreateCreature("SPIDGI01",[1454.794],14) // (Araignée géante)	
		CreateCreature("SPIDPH01",[1874.518],14) // (Araignée éclipsante)
		CreateCreature("SPIDSW01",[2187.551],14) // (Araignée-sabre)
		CreateCreature("SPIDGI01",[2395.879],14) // (Araignée géante)	
