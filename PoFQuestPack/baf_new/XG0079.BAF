IF
	Global("s#XGfa","GLOBAL",3)
THEN
	RESPONSE #100
		CreateCreature("XGfa",[1896.593],14)
		SetGlobal("s#XGfa","GLOBAL",5)
END

IF
	Global("s#XGfa","GLOBAL",4)
THEN
	RESPONSE #100
		SetGlobal("s#XGfa","GLOBAL",5)
		CreateCreature("XGfa",[1896.593],14)
		CreateCreature("XGSPQ",[1896.593],14)		
		ActionOverride("XGSPQ",Attack("XGfa"))
END

IF
