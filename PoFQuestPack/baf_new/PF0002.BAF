IF
  Global("Reveal0002","PF0002",0)
  Dead("SERO2MOD")  // ~Слуга лича~
  Dead("SERO1MOD")  // ~Слуга лича~
THEN
  RESPONSE #100
    SetGlobal("Reveal0002","PF0002",1)
    ClearAllActions()
    StartCutSceneMode()
    Wait(2)
    DisplayStringHead("ATKIMOD",@4)  
    Wait(5)
    ActionOverride("ATKIMOD",EscapeArea())
    AddexperienceParty(5000)
    EndCutSceneMode()
END

