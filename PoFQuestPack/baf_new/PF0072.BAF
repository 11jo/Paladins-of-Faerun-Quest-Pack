IF
  Global("RevealPF0072","PF0072",0)
  PartyHasItem("ARTK1MOD")  // ~Артефакт~
THEN
  RESPONSE #100
    SetGlobal("RevealPF0072","PF0072",1)
    ClearAllActions()
    StartCutSceneMode()
    CreateCreature("XGprq",[828.1370],10)  // ~Отрекшийся~
    Wait(2)
    ActionOverride("XGprq",StartDialogue("PRC1MOD",Player1))
    EndCutSceneMode()
END

IF
  Global("DEAD0","PF0072",0)
  Dead("XGprq")  // ~Отрекшийся~
THEN
  RESPONSE #100
    SetGlobal("DEAD0","PF0072",1)
    Wait(1)
    StartCutSceneMode()
    CreateCreature("XGBHC",[1339.1489],0)  // ~Адостер Сын Дриады~
    ActionOverride("XGBHC",MoveToPoint([1040.1334]))
    Wait(12)
    ActionOverride(Player1,MoveToPoint([916.1288]))
    DisplayStringHead(Player1,@0)  
    Wait(5)
    DisplayStringHead("XGBHC",@1)  
    Wait(8)
    TakePartyItem("ARKT1MOD")
    GiveItemCreate("MISC07",Player1,5000,0,0)  // ~Золотой~
    GiveItemCreate("FALX05",Player1,0,0,0)  // ~Угхуровский демон~
    ActionOverride("XGBHC",EscapeArea())
    SetQuestDone(@2)  
    EraseJournalEntry(@3) 
    EraseJournalEntry(@4)  
    EraseJournalEntry(@5)  
    EraseJournalEntry(@6)  
    EraseJournalEntry(@7)  
    EndCutSceneMode()
END

