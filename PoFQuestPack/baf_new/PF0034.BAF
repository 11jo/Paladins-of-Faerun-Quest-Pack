		ActionOverride(Player3,LeaveAreaLUA("PF0020","",[3877.3112],8))
		ActionOverride(Player4,LeaveAreaLUA("PF0020","",[3802.3159],8))
		ActionOverride(Player5,LeaveAreaLUA("PF0020","",[3660.3114],8))
		ActionOverride(Player6,LeaveAreaLUA("PF0020","",[3707.3156],8))
