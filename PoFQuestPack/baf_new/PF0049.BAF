    StartCutSceneMode()
    HideGUI()
    Explore()
    Wait(1)
    CreateCreature("XGSHTA",[2285.2318],0)  // ~Теневой Вор~
    Wait(2)
    ActionOverride("XGSHTA",MoveToPoint([2044.2621]))
    Wait(8)
